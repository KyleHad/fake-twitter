<html>
	<head><title>Twitter by Kyle</title></head>
	<header>
		<h1><a href="/">Twitter</a></h1>
	</header>
	 <body>
		 <div id="user_nav">
  	 		<% if current_user %>
    			Logged in as <%= link_to current_user.name, current_user%>.
    			<%= link_to "Log out", log_out_path %> <br>
					<%= link_to "New Tweet", make_path %>
  			<% else %>
    			<%= link_to "Sign up", sign_up_path %> or
    			<%= link_to "Log in", log_in_path %>
  			<% end %>
			</div>

			<% flash.each do |name, msg| %>
  			<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
		<%= yield %>
	</body>
</html>
